{
	"compilerOptions": {
		"target": "ES2021",
		"esModuleInterop": true,
		"module": "commonjs",
		"jsx": "react",
		"baseUrl": ".",
		"skipLibCheck": true,
		"strict": false,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es6"
		],
		"allowJs": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"paths": {
			"@/*": [
				"./resources/app/*"
			]
		},
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"vendor"
	]
}
